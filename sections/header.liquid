<h1>{{ section.settings.title }}</h1>

{% for block in section.blocks %}
    <p>({%  increment i %})</p>

    {% case block.type %}
    {% when 'my_type_1' %}
    
        {% if block.settings.my_logo %}
            {{ block.settings.my_logo | image_url:  width 300 | image_tag: width: nil }}
        {% else %}
            <p>No image</p>
        {% endif %}

    {% when 'my_type_2' %}
    
        <div style="background-color: {{  block.setting.my_color }};">
            &nbsp;
        </div>

    {% endcase %}

{% endfor %}

{% schema %}
  {
    "name": "header",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Header Title",
            "default": "THIS IS MY HEADER"
        }
      
    ],
    "blocks": [
        {
            "name": "logo",
            "type": "my_type_1",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "my_logo",
                    "label": "My Logo"
                }
            ]
        }, {
            "name": "my_color",
            "type": "my_type_2",
            "settings": [
                {
                    "type": "color",
                    "id": "mycolor",
                    "label": "My Color"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "header",
        "settings": {
        }
      }
    ]
  }
{% endschema %}